<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.sengnupan.dialogtraining.MainActivity"
    android:orientation="vertical" >

    <Button
        android:id="@+id/btnlist"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/button"
        android:text="Dialog List"
        android:textColor="#fff" />

    <Button
        android:id="@+id/btnmultiple"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Dialog MultiChoice"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:textColor="#fff"
        android:background="@drawable/button"/>

    <Button
        android:id="@+id/btncustomlayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Dialog Custom Layout"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:textColor="#fff"
        android:background="@drawable/button"/>

    <View
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:background="#2ea5d1"
     />

    <TextView
        android:id="@+id/tvMessage"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="9dp" />

</LinearLayout>
